<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/asphalt_ghost_button_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/ghost_button_background_selector"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/asphalt_ghost_button_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@drawable/ghost_button_text_color_selector"
            android:textSize="15sp"
            tools:text="Ghost Button" />

    </LinearLayout>

</layout>